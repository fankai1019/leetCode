filetype plugin indent on
map <Space> <Leader>
set tabstop=4
set shiftwidth=4
set expandtab
imap jk <ESC>
imap JK <ESC>
imap jf <Right>
imap JF <Right>
vmap ff <ESC>
vmap FF <ESC>
vnoremap p "_dP
nmap <leader>p "0p
nmap <leader>j zz<C-d>
nmap <leader>k zz<C-u>
nmap <leader>b <C-b>
nmap <leader>f <C-f>
nmap <leader>a 5
nmap <leader>reg :reg<CR>
nmap <leader>vsvim :set vimrc?<CR>
nmap <leader>h <C-w>h
nmap <leader>l <C-w>l
nmap <C-j> <C-w>j
nmap <C-k> <C-w>k
inoremap { {}<Esc>ha
inoremap ( ()<Esc>ha
inoremap [ []<Esc>ha
inoremap " ""<Esc>ha
inoremap ' ''<Esc>ha
inoremap ` ``<Esc>ha
